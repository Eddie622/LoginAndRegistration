@{
    ViewData["Title"] = "Registration Page";
}

<div class="text-center">
    <h1 class="display-4">Registration</h1>
    @model User
    <form asp-action="RegisterUser" asp-controller="Home" method="post">
        <span asp-validation-for="FirstName"></span><br>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName"><br><br>
        
        <span asp-validation-for="LastName"></span><br>
        <label asp-for="LastName"></label>
        <input asp-for="LastName"><br><br>

        <span asp-validation-for="Email"></span><br>
        <label asp-for="Email"></label>
        <input asp-for="Email"><br><br>

        <span asp-validation-for="Password"></span><br>
        <label asp-for="Password"></label>
        <input asp-for="Password"><br><br>

        <span asp-validation-for="Confirm"></span><br>
        <label asp-for="Confirm"></label>
        <input asp-for="Confirm"><br><br>

        <input value="Register" type="submit">    
    </form>
</div>
